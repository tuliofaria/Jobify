
        <%- include('header') %> <!-- Inclui uma uma página parcial(header) para dentro da página atual -->
        <h2>
            Editar Vaga:
            <a href="/admin/vagas">Vagas</a>
        </h2>
        <div>
            <form method="POST">
                <label>Título Vaga:</label>
                <input type="text" name="titulo" value="<%= vaga.titulo %>">
                <br>
                <label>Descrição Vaga:</label>
                <textarea name="descricao"><%= vaga.descricao %></textarea>
                <br>
                <label>Categoria Vaga:</label>
                <select name="categoria">
                    <% categorias.forEach( categoria => { %>
                    <option value="<%= categoria.id %>" <% if(categoria.id == vaga.categoria){ %>selected<% } %>><%= categoria.categoria %></option>
                    <% }) %>
                </select>
                <br>
                <button>Salvar Vaga</button>
                <br>
            </form>
        </div>
        <%- include('footer') %> <!-- Inclui uma uma página parcial(footer) para dentro da página atual -->